@page "/UserDetails"
@using System.ComponentModel.DataAnnotations
@using MudBlazor
@using Stuco.Application.Abstractions
@using Stuco.Domain.Entities
@inject IStucoSession stucoSession
@inject IRepository repository
@inject NavigationManager Navigation

<PageTitle>Mijn Gegevens</PageTitle>

<MudCard Class="contractor-card">
    <MudCardHeader>
        <MudText Typo="Typo.h5" Class="font-weight-bold">Mijn Gegevens</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudForm Model="@User" IsValid="@IsValid" @ref="form">
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField 
                        Label="Bedrijfsnaam" 
                        @bind-Value="User.CompanyName" 
                        RequiredError="Bedrijfsnaam is verplicht"
                        Required="true"/>
                </MudItem>

                <MudItem xs="6">
                    <MudTextField 
                        Label="Voornaam" 
                        @bind-Value="User.Contact.FirstName" 
                        RequiredError="Voornaam is verplicht!"
                        Required="true"/>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField 
                        Label="Achternaam" 
                        @bind-Value="User.Contact.LastName"
                        RequiredError="Achternaam is verplicht!"
                        Required="true"/>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField 
                        Label="Email" 
                        @bind-Value="User.Contact.Email" 
                        Validation="@(new EmailAddressAttribute() {ErrorMessage = "Ongeldig e-mailadres"})"
                        Required="true"/>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField 
                        Label="Telefoonnummer" 
                        @bind-Value="User.Contact.PhoneNumber" 
                        Validation="@(new PhoneAttribute() {ErrorMessage = "Ongeldig Telefoonnummer"})"
                        Required="true"/>
                </MudItem>

                <MudItem xs="6">
                    <MudTextField ReadOnly="true" Label="Banknaam" @bind-Value="User.FiscalInformation.BankName" Required="true"/>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField ReadOnly="true" Label="Bankrekkeningmummer" @bind-Value="User.FiscalInformation.BankAccountNumber" Required="true"/>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField ReadOnly="true" Label="KVK Nummer" @bind-Value="User.FiscalInformation.KvkNumber" Required="true"/>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField ReadOnly="true" Label="BTW Nummer" @bind-Value="User.FiscalInformation.BtwNumber" Required="true"/>
                </MudItem>
            </MudGrid>

            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SaveContractor" Disabled="!IsValid">
                Opslaan
            </MudButton>
        </MudForm>
    </MudCardContent>
</MudCard>

@code {
    private MudForm form;
    private bool IsValid;
    private Contractor User = new()
    {
        CompanyName = null,
        Contact = null,
        FiscalInformation = null
    };

    protected override void OnInitialized()
    {
        User = stucoSession.GetCurrentContractor();
        base.OnInitialized();
    }

    private async Task SaveContractor()
    {
        await repository.SaveChangesAsync();
        Navigation.NavigateTo("/");
    }
}
